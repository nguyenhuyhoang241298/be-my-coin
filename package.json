{
  "name": "nodejs-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npx nodemon --env-file=.env",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "db:seed": "tsx ./src/models/seed.ts",
    "db:generate": "drizzle-kit generate --config=./src/models/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=./src/models/drizzle.config.ts",
    "db:migration": "npm run db:generate && npm run db:migrate",
    "db:drop-migrations": "drizzle-kit drop --config=./src/models/drizzle.config.ts",
    "db:up-migration": "drizzle-kit up:mysql --out=./src/models/drizzle",
    "db:studio": "drizzle-kit studio --config=./src/models/drizzle.config.ts",
    "db:push": "drizzle-kit push --config=./src/models/drizzle.config.ts"
  },
  "keywords": [],
